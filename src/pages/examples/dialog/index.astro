---
const title = "Dialog";
import { Code } from "astro:components";
import Layout from "../../../layouts/Layout.astro";
---

<Layout title={title}>
  <h2>Simple dialog</h2>
  <iframe
    src={`${import.meta.env.BASE_URL}examples/dialog/dialog/index.html`}
    style="width:100%; height: 300px; margin-bottom:10px;"></iframe>
  <a
    class="button"
    href={`${import.meta.env.BASE_URL}examples/dialog/dialog/index.html`}
    >View Example</a
  >
  <p>
    This example uses the native HTML dialog element. It closes when clicking
    outside the dialog or pressing the Escape key.
  </p>
  <hr />
  <h2>Draggable dialog</h2>
  <iframe
    src={`${import.meta.env.BASE_URL}examples/dialog/draggable-dialog/index.html`}
    style="width:100%; height: 300px; margin-bottom:10px;"></iframe>
  <a
    class="button"
    href={`${import.meta.env.BASE_URL}examples/dialog/draggable-dialog/index.html`}
    >View Example</a
  >
  <p>This example expands on the simple dialog to allow for dragging.</p>
</Layout>
